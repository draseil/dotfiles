#!/bin/bash

vol=$(amixer get Master | sed -n 's/^.*\[\([0-9]\+\)%.*$/\1/p'| uniq)
vol=$(($vol-$((vol % 5))))

case $vol in
     0) echo "____________________";;
     5) echo "-___________________";;
    10) echo "--__________________";;
    15) echo "---_________________";;
    20) echo "----________________";;
    25) echo "-----_______________";;
    30) echo "------______________";;
    35) echo "-------_____________";;
    40) echo "--------____________";;
    45) echo "---------___________";;
    50) echo "----------__________";;
    55) echo "-----------_________";;
    60) echo "------------________";;
    65) echo "-------------_______";;
    70) echo "--------------______";;
    75) echo "---------------_____";;
    80) echo "----------------____";;
    85) echo "-----------------___";;
    90) echo "------------------__";;
    95) echo "-------------------_";;
   100) echo "--------------------";;
esac
